+  public func handleResponse(_ behavior: [String: Bool]) -> Bool {
+    if let completionHandler = completionHandler {
+      let options = presentationOptions(behavior)
+      completionHandler(options)
+      finish()
+      return true
+    }
+    finish()
+    return false
+  }
